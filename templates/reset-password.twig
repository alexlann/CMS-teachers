{% extends "_layouts/site" %}

{% block content %}
    <div class="w-screen h-screen flex justify-center items-center">
        <div class="w-fit h-fit bg-white rounded-xl py-6 px-20">
            <h1 class="mt-2 site-h1">{{ "Reset Password"|t }}</h1>
                <form method="post" accept-charset="UTF-8">
                {{ csrfInput() }}
                {{ actionInput('users/send-password-reset-email') }}
                {{ redirectInput('login') }}

                <label class="font-bold" for="loginName">{{ "Email or username"|t }}</label><br>
                {{ input('text', 'loginName', loginName ?? craft.app.user.rememberedUsername, {
                    id: 'loginName',
                    autocomplete: 'email',
                    class:"bg-light-blue rounded px-4 py-2",
                }) }}

                {% if errors is defined %}
                    {{ ul(errors, {class: 'errors'}) }}
                {% endif %}

                <div class="flex justify-end">
                    <button class="btn-primary my-3 w-fit">{{ "Submit"|t }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}